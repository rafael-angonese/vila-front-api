// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contact {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String
  phone String

  @@map("contacts")
}

model Fairy {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  element String
  health_point Int

  @@map("fairies")
}

model Spell {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  element String
  spell_word String
  mana Int

  @@map("spells")
}